<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>HelloWorld</servlet-name>
        <servlet-class>com.wxy8866.fromzero.servlets.HelloWorld</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AcceptForm</servlet-name>
        <servlet-class>com.wxy8866.fromzero.servlets.AcceptForm</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AcceptLink</servlet-name>
        <servlet-class>com.wxy8866.fromzero.servlets.AcceptLink</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FileRead</servlet-name>
        <servlet-class>com.wxy8866.fromzero.servlets.FileRead</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FileWrite</servlet-name>
        <servlet-class>com.wxy8866.fromzero.servlets.FileWrite</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RequestHeader</servlet-name>
        <servlet-class>com.wxy8866.fromzero.servlets.RequestHeader</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RequestInfo</servlet-name>
        <servlet-class>com.wxy8866.fromzero.servlets.RequestInfo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RequestParam</servlet-name>
        <servlet-class>com.wxy8866.fromzero.servlets.RequestParam</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MyCookies</servlet-name>
        <servlet-class>com.wxy8866.fromzero.servlets.MyCookies</servlet-class>
    </servlet>

    <filter>
        <filter-name>IPFilter</filter-name>
        <filter-class>com.wxy8866.fromzero.filters.IPFilter</filter-class>
        <init-param>
            <param-name>IP</param-name>
            <param-value></param-value>
        </init-param>
    </filter>

    <servlet-mapping>
        <servlet-name>MyCookies</servlet-name>
        <url-pattern>/mycookies</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RequestParam</servlet-name>
        <url-pattern>/requestparam</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RequestHeader</servlet-name>
        <url-pattern>/requestheader</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RequestInfo</servlet-name>
        <url-pattern>/requestinfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HelloWorld</servlet-name>
        <url-pattern>/helloworld</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AcceptLink</servlet-name>
        <url-pattern>/acceptlink</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AcceptForm</servlet-name>
        <url-pattern>/acceptform</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FileRead</servlet-name>
        <url-pattern>/fileread</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FileWrite</servlet-name>
        <url-pattern>/filewrite</url-pattern>
    </servlet-mapping>

    <filter-mapping>
        <filter-name>IPFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>